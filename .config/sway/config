     map_to_output eDP-1
}

input "1386:20755:Wacom_HID_5113_Pen" {
     map_to_output eDP-1
}

input "1739:32651:SYNA2B31:00_06CB:7F8B_Touchpad" {
      tap enabled
      dwt enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
      xkb_layout us,ru
      xkb_options grp:toggle
}

bindsym XF86AudioMute exec vol_toggle && pkill -SIGRTMIN+10 rstatus
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ && pkill -SIGRTMIN+10 rstatus
bindsym XF86AudioLowerVolume exec amixer set Master 5%- && pkill -SIGRTMIN+10 rstatus
bindsym XF86MonBrightnessUp exec brctl bl up
bindsym XF86MonBrightnessDown exec brctl bl down
bindsym Print exec grim /tmp/`date +%d.%m.%Y-%M.%H.%S.png`
bindsym $mod+l $lock
bindsym $mod+k exec rotate

for_window [title="^EmptySpace$"] floating enable; resize width 450px; resize height 800px; 
#for_window [app_id="firefox" title="^$"] floating enable; move right 700px; move up 300px;

