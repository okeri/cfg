### Variables
set $mod Mod4

set $term kitty
set $menu dmenu_run -m 0
set $ws1 "1:    "
set $ws2 "2:    "
set $ws3 "3:    "

set $lock exec swaylock -l -e -i ~/Documents/lock.png

output eDP-1 pos 0 0 res 1920x1080
output DP-1 pos -1920 0 res 1920x1200
output DP-2 pos -1920 0 res 1920x1200
output * bg ~/Documents/moon.jpg fill

floating_modifier $mod normal
workspace_layout tabbed
workspace $ws1 output eDP-1
workspace $ws2 output DP-1


### Key bindings
bindsym --to-code {
     $mod+Down exec $term
     $mod+q kill
     $mod+Up kill
     $mod+d exec $menu
     $mod+Shift+c reload
     $mod+Shift+e exit
     Print exec grim /tmp/`date +%d.%m.%Y-%M.%H.%S.png`
     $mod+l $lock
     $mod+k exec rotate

     # ACPI events
     XF86AudioMute exec acpi_handler MUTE
     XF86AudioRaiseVolume exec acpi_handler VOLUP
     XF86AudioLowerVolume exec acpi_handler VOLDN
     XF86MonBrightnessUp exec acpi_handler BRTUP
     XF86MonBrightnessDown exec acpi_handler BRTDN
}

#
# Moving around:
#
    # Move your focus around
    bindsym $mod+Left focus left
    bindsym $mod+Right focus right

    # ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right	

    # gaps
    bindsym $mod+g gaps inner all plus 10
    bindsym $mod+Shift+g gaps inner all set 0
#
# Workspaces:
#
    # switch to workspace
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8

    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8

    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
#
# Layout stuff:
#
    bindsym $mod+h splith
    bindsym $mod+v splitv
    bindsym $mod+b border toggle
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+Shift+space floating toggle
    bindsym $mod+space focus mode_toggle
    bindsym $mod+a focus parent

#
# Scratchpad:
#
    bindsym $mod+Shift+s move scratchpad
    bindsym $mod+s scratchpad show

#
# Resizing containers:
#
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

#
# Status Bar:
#
bar {
    font "pango:Roboto, FontAwesome" 12
    status_command rstatus
    output eDP-1
    position top
    binding_mode_indicator yes
    strip_workspace_numbers yes
    height 24
    separator_symbol ''
    colors {
        statusline #ffffff
        background #00000000
	separator #cccccc
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

input "1386:20755:Wacom_HID_5113_Finger" {
     map_to_output eDP-1
}

input "1386:20755:Wacom_HID_5113_Pen" {
     map_to_output eDP-1
}

input "1739:32651:SYNA2B31:00_06CB:7F8B_Touchpad" {
      tap enabled
      dwt enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
      xkb_layout us,ru
      xkb_options grp:toggle
}

assign [app_id="firefox"] $ws2
for_window [title="^EmptySpace$"] floating enable; resize set 450px 800px
for_window [app_id="firefox"] inhibit_idle fullscreen
for_window [title="MPlayer"] inhibit_idle visible

exec mako
exec iio-sway
exec swayidle -w timeout 400 'swaymsg "$lock;exec systemctl suspend"'
workspace "3:    "
exec $term -e ncmpcpp
workspace "1:    "
exec firefox
exec $term


