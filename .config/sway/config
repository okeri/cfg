### Variables
set $mod Mod4

set $term footclient -N
set $menu wofi -S drun -t $term -W 600 -H 300 -i
set $ws1 "1:    "
set $ws2 "2:    "
set $ws3 "3:    "
set $ws4 "4:    "
set $ws5 "5:    "

set $lock exec swaylock -l -e -i ~/Documents/lock.png

output eDP-1 pos 0 0 res 1920x1080
output DP-1 pos -1920 0 res 1920x1200
output DP-2 pos -1920 0 res 1920x1200
output * bg ~/Documents/moon.jpg fill

floating_modifier $mod normal
workspace $ws1 output eDP-1
workspace $ws2 output eDP-1
workspace $ws3 output DP-2
workspace $ws4 output eDP-1
workspace $ws5 output eDP-1

#xwayland disable

### Key bindings
bindsym --to-code {
     $mod+Return exec $term
     $mod+q kill
     $mod+d exec $menu
     $mod+Shift+d exec sws.sh -d "wofi -d"
     $mod+Shift+c reload
     $mod+Shift+e exit
     Print exec grim /tmp/`date +%d.%m.%Y-%M.%H.%S.png`
     $mod+l $lock
     $mod+k exec rotate

     # ACPI events
     XF86AudioMute exec acpi_handler MUTE
     XF86AudioRaiseVolume exec acpi_handler VOLUP
     XF86AudioLowerVolume exec acpi_handler VOLDN
     XF86MonBrightnessUp exec acpi_handler BRTUP
     XF86MonBrightnessDown exec acpi_handler BRTDN

     #kbd layout
     ISO_Next_Group exec pkill -SIGRTMIN+5 rstatus

     # moc
     $mod+p exec mocp -G
     $mod+n exec mocp -f
     $mod+b exec mocp -r
     
     # gaps
     $mod+g gaps inner current plus 10
     $mod+Shift+g gaps inner current set 0


     # Layout stuff:
     $mod+c splith
     $mod+v splitv
     $mod+w layout tabbed
     $mod+e layout toggle split
     $mod+Shift+space floating toggle
     $mod+space focus mode_toggle
     $mod+a focus parent

     # Scratchpad:
     $mod+Shift+s move scratchpad
     $mod+s scratchpad show

     $mod+r mode "resize"
}

#
# Moving around:
#
    # Move your focus around
    bindsym $mod+Left focus left
    bindsym $mod+Right focus right
    bindsym $mod+Up focus up
    bindsym $mod+Down focus down

    # ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right	

#
# Workspaces:
#
    # switch to workspace
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8

    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace $ws4
    bindsym $mod+Shift+5 move container to workspace $ws5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8

    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

#
# Resizing containers:
#
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#
# Status Bar:
#  
bar {
    font "RobotoCondensed, FontAwesome" 12
    status_command rstatus
    output eDP-1
    position top
    binding_mode_indicator yes
    strip_workspace_numbers yes
    height 24
    separator_symbol ''
    tray_output none
    colors {
        statusline #ffffff
        background #00000000
	separator #cccccc
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

