     map_to_output eDP-1
}

input "1386:20755:WCOM5113:00_056A:5113C" {
     map_to_output eDP-1
}

input "1739:32651:SYNA2B31:00_06CB:7F8B_Touchpad" {
      tap enabled
      dwt enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
      xkb_layout us,ru
      xkb_options grp:toggle,compose:rctrl
}

smart_gaps on
gaps inner 10
gaps outer 0
default_border pixel 1

for_window [app_id="firefox"] inhibit_idle fullscreen visible
for_window [app_id="mpv"] fullscreen enable; inhibit_idle visible
for_window [class="Skype"] inhibit_idle open
for_window [app_id="firefox" title=".*Private.Browsing.*"] move window to workspace $ws5

for_window [title="^EmptySpace$"] {
   floating enable
   resize set 450px 800px
}

for_window [app_id="scrterm"] {
   move scratchpad
   resize set 1900px 1036px
   move absolute position 479px 0px # wtf
}	  

assign [app_id="emacs"] $ws2
assign [app_id="firefox"] $ws3
assign [app_id="mocp"] $ws4
assign [class="Skype"] $ws5

exec --no-startup-id foot --server
exec --no-startup-id mako
exec --no-startup-id iio-sway
exec --no-startup-id swayidle -w timeout 300 'swaymsg "$lock"' timeout 1200 'swaymsg exec suspend_discharging' timeout 7200 'swaymsg exec systemctl suspend'

exec firefox
exec sleep 0.1 && $term -a scrterm && $term -a mocp mocp && $term -a emacs emacst && $term
